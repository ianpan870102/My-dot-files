// For Visual Studio Code
{
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["f"],
            "after": ["leader", "leader", "s"],
        }
    ],
    "vim.leader": ";",
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "DejaVu Sans Mono",
    "vim.easymotionMarkerFontSize": 16,
    "vim.easymotionMarkerYOffset": 6,
    "vim.easymotionMarkerForegroundColorTwoChar": "#fff700",
    "vim.easymotionMarkerWidthPerChar": 10,
    "vim.easymotionMarkerHeight": 17,
    "vim.cursorStylePerMode.insert": "line",

    "editor.fontFamily": "DejaVu Sans Mono",
    "editor.fontSize": 16,
    "editor.lineHeight": 22,
    "editor.cursorStyle": "block",
    "editor.wordWrap": "on",

    // "editor.tokenColorCustomizations":   
    // {   "comments": "#b1afafcd",
    //     "numbers": "#fffafa",
    //     "keywords": "#d3a8fd",
    //     "functions": "#93e9e8", 
    //     //"variables": "#ff826c",
    //     "strings": "#fcc97c",
    //     "types": "#ceec7c", 
    // },


    "terminal.integrated.fontSize": 16,

    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#d63e85",
        "editorBracketMatch.background": "#fff12cb6",
        "editor.foreground": "#fffafa",
        "editor.selectionBackground": "#3ef1f741",
        "terminal.background": "#292929",
        "terminal.foreground": "#fffafa",
    },

    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Better Solarized Dark",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "window.zoomLevel": 0,
    "editor.minimap.enabled": false,
    "zenMode.hideTabs": false,
    "editor.lineNumbers": "relative"
}
